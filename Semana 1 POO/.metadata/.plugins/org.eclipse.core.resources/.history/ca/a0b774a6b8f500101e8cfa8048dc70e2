package com.mx.Estudiante;

public class Estudiante {

	
	//declaracion de los atributos
	private String nombre;
	private String apellido;
	private int edad;
	private String carrera;
	private int semestre;
	
	//declaracion de los constructores; inicializan la clase
	//constructor por defecto
	
	public Estudiante() {
		
	}
	
	//constructor con parametros o constructor parametrizado
	//iniciliza la clase con sus atributos
	
	public Estudiante(String nombre, String apellido, int edad, String carrera, int semestre) {
		this.nombre = nombre;
		this.apellido = apellido;
		this.edad = edad;
		this.carrera = carrera;
		this.semestre = semestre;
	}
	//getter y setter:nos permiten acceder de forma controlada a los atributos
	//get sirve para obtener el valor del atributo
	public String getNombre() {
		return nombre;
	}
	//set: sirve para fijar o cambian el valor del atributo
	public void setNombre(String nombre) {
		this.nombre=nombre;
	}
	public String getApellido() {
		return apellido;
	}
	//set: sirve para fijar o cambian el valor del atributo
	public void setApellido(String apellido) {
		this.apellido=apellido;
	}
	public int getEdad() {
		return edad;
	}
	public void setEdad(int edad) {
		this.edad = edad;
	}
	
	public String getCarrera() {
		return carrera;
	}
	
	public void setCarrera(String carrera) {
		this.carrera = carrera;
	}
	
	public int getSemestre() {
		return semestre;
	}
	public void setSemestre(int semestre) {
		this.semestre = semestre;
	}
	
	//metodo toString: covertir las cadenas en legibles para que se puedan interpretar
	@Override
	public String toString() {
		return "Estudiante=[nombre = " + nombre + " apellido = " + apellido + " edad= " + edad
				+ " carrera= " + carrera + " + semestre= " + semestre + "]\n";
	}
	

}